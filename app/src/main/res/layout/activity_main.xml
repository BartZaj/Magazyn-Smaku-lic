<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Główna zawartość ekranu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Przycisk dodawania kategorii -->
        <Button
            android:id="@+id/dodajKategorieButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dodaj kategorię"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- RecyclerView dla kategorii -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/kategorieRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="597dp"
            android:layout_marginBottom="60dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Pasek z przyciskami na dole -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="bottom"
    android:layout_alignParentBottom="true">

    <!-- Przycisk Moj Magazyn -->
    <Button
        android:id="@+id/mojMagazynButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:text="Mój Magazyn"
        android:textColor="#FFFFFF" />

    <!-- Przycisk Zobacz Przepisy -->
    <Button
        android:id="@+id/zobaczPrzepisyButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:text="Zobacz Przepisy"
        android:textColor="#FFFFFF" />
</LinearLayout>

    </FrameLayout>