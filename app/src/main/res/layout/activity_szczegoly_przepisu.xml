<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Główna zawartość ekranu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="56dp"> <!-- Zapewnia miejsce na dolny pasek -->

        <TextView
            android:id="@+id/nazwaPrzepisuTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwa przepisu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/trescPrzepisuTextView"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:paddingBottom="16dp"
            android:text="Treść przepisu"
            android:textSize="16sp" />

        <!-- Nowy widok do zmiany ilości posiłków -->
        <TextView
            android:id="@+id/iloscPosilkowLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ilość posiłków:"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/iloscPosilkowEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="1"
            android:padding="8dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista produktów:"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/produktyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />
    </LinearLayout>

    <!-- Pasek nawigacyjny na dole -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="bottom">

        <!-- Przycisk Mój Magazyn -->
        <Button
            android:id="@+id/mojMagazynButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Mój Magazyn"
            android:textColor="#FFFFFF"
            android:onClick="onMojMagazynClick" />

        <!-- Przycisk Zobacz Przepisy -->
        <Button
            android:id="@+id/zobaczPrzepisyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Zobacz Przepisy"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</FrameLayout>