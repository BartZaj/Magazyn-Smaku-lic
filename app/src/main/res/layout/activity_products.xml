<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Główna zawartość ekranu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Przycisk dodawania produktu -->
        <Button
            android:id="@+id/dodajProduktButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dodaj Produkt"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- RecyclerView dla produktów -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/produktyRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="597dp"
            android:layout_marginBottom="60dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Pasek z przyciskami na dole -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="bottom">

        <!-- Przycisk Moj Magazyn -->
        <Button
            android:id="@+id/mojMagazynButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Mój Magazyn"
            android:textColor="#FFFFFF"
            android:onClick="onMojMagazynClick" />

        <!-- Przycisk Zobacz Przepisy -->
        <Button
            android:id="@+id/zobaczPrzepisyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Zobacz Przepisy"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</FrameLayout>